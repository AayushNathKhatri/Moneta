<MudPaper Width="200px" Class="d-inline-flex py-3 " Elevation="0">
    <MudNavMenu Class="mud-width-full">
        <MudText Typo="Typo.h6" Class="flex-row px-4">Moneta</MudText>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">Manage your Money</MudText>
        <MudDivider Class="my-2" />
        <MudNavLink Href="/home" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
        <MudNavLink Href="/cashinflow" Icon="@Icons.Material.Filled.CallMissed" IconColor="Color.Success">Income</MudNavLink>
        <MudNavLink Href="/cashoutflow" Icon="@Icons.Material.Filled.CallMissedOutgoing" IconColor="Color.Error">Expenditure</MudNavLink>
        <MudNavLink Href="/debts" Icon="@Icons.Material.Filled.MoneyOff" IconColor="Color.Warning">Debts</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.Logout" OnClick="Dialog">Logout</MudNavLink>
    </MudNavMenu>
</MudPaper>
@code {

    [Inject] private IDialogService DialogService { get; set; }


    private async void Dialog()
    {
        bool? result = await DialogService.ShowMessageBox(
            "Logut?",
            "Confirm Logout",
            yesText: "Yes", cancelText: "No");
        if(result == true)
        {
            Nav.NavigateTo("/login");    
        }
        
    }
}